<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('layout/header')%>

    <title>User Register</title>

    <style>
        #register-page {
            background-image: url('https://images.unsplash.com/photo-1565018968331-61145555526b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1176&q=80');
            /* background-position: center; */
            background-repeat: no-repeat;
            background-size: cover;
        }

        .blur {
            background: rgba(10, 10, 10, 0.2);
            backdrop-filter: blur(8px);
            height: 100vh;
            width: 100%;
        }

        #login-form {
            border-color: white;
            border-style: solid;
            padding-top: 3em;
            padding-bottom: 3em;
        }

        .form-label {
            color: white;
            font-weight: bold;
            font-size: 1.3em;
        }

        .form-control {
            color: white;
            background-color: transparent;
            border-top: none;
            border-left: none;
            border-right: none;
            border-radius: 0px
        }

        .form-control:focus {
            background-color: transparent;
            color: white;
            border-color: white;
        }

        .form-control::placeholder {
            color: white;
        }

        .btn {
            color: white;
            border-radius: 0px;
            width: 100%;
        }

        .btn:hover {
            color: white;
            box-shadow: 5px 5px;
        }

        .btn:active {
            background-color: white;
            color: black;
            box-shadow: none;
        }
    </style>
</head>

<body style="background-color: black;">
    <%- include('layout/navbar')%>

    <div class="container mt-5">
        <div class="row justify-content-between">
            <div class="col-xl-4 col-lg-6 col-md-8 col-10 text-center">
                <form action="/api/users/create" method="POST" id='login-form' class='ps-5 pe-5'>
                    <h2 style="color: white;">REGISTER</h2>

                    <div class="mt-5 text-start">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username"
                            placeholder="Type your username" required>
                    </div>

                    <div class="mt-3 text-start">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="Type your password" required>
                    </div>

                    <div class="mt-4 text-center">
                        <button type="submit" class="btn">
                            <b>Sign up</b>
                        </button>
                    </div>
                </form>
            </div>
            <div class="col ms-5 ">
                <table class = 'table table-dark'>
                    <thead>
                        <tr>
                            <td> No. </td>
                            <td> Username </td>
                            <td> Password </td>
                        </tr>
                    </thead>
                    <tbody>
                        <% let i=0 %>
                        <% users.forEach(user => { %>
                            <tr>
                                <td> <%= ++i %> </td>
                                <td> <%= user.username %> </td>
                                <td> <%= user.password %> </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <%- include('layout/javascript')%>
</body>

</html>